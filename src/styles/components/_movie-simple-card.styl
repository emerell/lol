.movie-simple-card {
    width: 200px;
}

.movie-simple-card__img-box {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 300px;
    background-color: #4d4d4d;
    border-radius: 5px;
    color: #939393;
    overflow: hidden;
    text-align: center;   
}

.movie-simple-card__img {
    max-width: 100%;    
}

.movie-simple-card__title {
    margin-top: .4rem;
    font-size: 14px;
    font-weight: 700;
    line-height: 1.2;
    color: #f5f5f5;
}

.movie-simple-card__year {
    color: #8f8f8f;
    font-size: 12px;
    font-weight: 500;    
}