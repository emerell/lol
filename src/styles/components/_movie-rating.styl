.movie-rating {
    margin-bottom: 1.5rem;
    align-items: center;
    display: flex;    
}

.movie-rating__icon {
    color: gold;
    margin-right: .5rem;
}

.movie-rating__box {
    display: flex;
    flex-direction: column;
    font-size: 0.8rem;
    line-height: 1.3em;
    color: #b1b0b0;
}

.movie-rating__average {
    font-size: 1.5rem;
    font-weight: 500;
    color: #f5f5f5;
}