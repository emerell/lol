.actor-card {
    width: 130px;
}

.actor-card__img-box {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 165px;
    background-color: #4d4d4d;
    border-radius: 5px;
    color: #939393;
    overflow: hidden;
    text-align: center;
}

.actor-card__img {
    max-width: 100%;    
}

.actor-card__name {
    margin-top: .4rem;    
    font-size: 14px;
    font-weight: 700;
    line-height: 1.2;
    color: #f5f5f5;
}