.movie-card {
    background-color: #5a5a5a;
    border-radius: 10px;
    display: flex;
    overflow: hidden;
    width: 100%;
    +breakpoint(mobile) {
        flex-direction: column;
    }
}

.movie-card__poster-box {
    align-items: center;
    display: flex;
    flex: none;
    justify-content: center;
    overflow: hidden;
    position: relative;
    text-align: center;    
}

.movie-card__background {
    background-size: cover;
    bottom: -5px;
    filter: blur(4px);
    left: -13px;
    opacity: .8;
    position: absolute;
    right: -13px;
    top: -5px;
    z-index: 0;    
}

.movie-card__poster {
    height: 100%;
    position: relative;
    z-index: 10;
}

.movie-card__info-box {
    color: #f5f5f5;
    display: flex;
    flex: auto;
    flex-direction: column;
    padding: 20px;
    position: relative;
    z-index: 1;    
}

.movie-card__title {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 1rem;    
}