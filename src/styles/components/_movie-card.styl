.movie-card {
    background-color: #5a5a5a;
    border-radius: 10px;
    display: flex;
    overflow: hidden;
    width: 100%;
    +breakpoint(mobile) {
        flex-direction: column;
    }
    +breakpoint(tablet) {
        height: 300px;
    }
}

.movie-card__poster-box {
    align-items: center;
    display: flex;
    justify-content: center;
    overflow: hidden;
    position: relative;
    height 100%;
    flex: none;
    text-align: center; 
    +breakpoint(mobile) {
        position: relative;
    }   
}

.movie-card__background {
    background-size: cover;
    bottom: -5px;
    filter: blur(4px);
    left: -13px;
    opacity: .8;
    position: absolute;
    right: -13px;
    top: -5px;
    z-index: 0;  
     +breakpoint(desktop) {
        display: none;
    }  
}

.movie-card__poster {
    height: 100%;
    position: relative;
    z-index: 10;
}

.movie-card__info-box {
    color: #f5f5f5;
    display: flex;
    flex: auto;
    flex-direction: column;
    padding: 20px;
    position: relative;
    z-index: 1;    
}

.movie-card__title {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 1rem;    
}

.movie-card__release-year {
    color: #959595;
    display: inline-block;
    font-size: .8em;
    font-weight: 500;
    margin-left: .2rem;
}

.movie-card__genres {
    display: inline-block;
    font-size: 14px;
    line-height: 1.35;
    margin-bottom: .5rem;
}

.movie-card__genre {
    background-color: #363636;
    color: #f5f5f5;
}

.movie-card__overview {
    display: flex;
    flex: auto;
    font-family: Open Sans;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: .15px;
    line-height: 1.3;
    overflow: hidden;
}

.movie-card__footer {
    margin-top: 1rem;
}