media_queries = {
  mobile  : "only screen and (max-width: 768px)",
  tablet  : "only screen and (min-width: 769px)",
  touch   : "only screen and (max-width: 1087px)",
  desktop : "only screen and (min-width: 1088px)"
}


breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}